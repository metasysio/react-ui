{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "target": "es5",
    "lib": ["DOM", "ES6","ES2016","ES2017"],
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "rollup.config.js",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}